'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('planit-app', ['ngRoute', 'ng-token-auth']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/trips', {
      templateUrl: "<%= asset_path('trips/index.html') %>",
      controller: 'TripsCtrl'
    }).
    when('/trips/:trip.id/activities', {
      templateUrl: "<%= asset_path('trips/activities.html') %>",
      controller: 'ActivitiesCtrl'
    }).
    when('/trips/:trip.id/flights', {
      templateUrl: "<%= asset_path('trips/flights.html') %>",
      controller: 'FlightsCtrl'
    }).
    when('/trips/:trip.id/accommodations', {
      templateUrl: "<%= asset_path('trips/accommodations.html') %>",
      controller: 'AccommodationsCtrl'
    }).
    when('/trips/:trip.id/expenses', {
      templateUrl: "<%= asset_path('trips/expenses.html') %>",
      controller: 'ExpensesCtrl'
    }).
    when('/trips/:trip.id/packings', {
      templateUrl: "<%= asset_path('trips/packings.html') %>",
      controller: 'PackingsCtrl'
    })

  $authProvider.configure({
    apiUrl: 'http://localhost:3000'
  })

}]);