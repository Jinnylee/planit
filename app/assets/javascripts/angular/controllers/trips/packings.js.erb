app.controller('PackingsCtrl', ['$scope', '$http', '$auth', '$location','$routeParams', function($scope, $http, $auth, $location, $routeParams){
  console.log($routeParams)
  $scope.message = "Packings";

  $scope.packings = [];
  $scope.users = [];
  $scope.newPacking = {};
  $scope.nameList = [];
  $scope.tripId = $routeParams.trip_id;
  $scope.packingId = $routeParams.id;

  $auth.validateUser().then(function(resp){
  console.log(resp);
  $scope.user = resp;
  $scope.currentuser = resp.name;
  }).catch(function(resp){
  console.log(resp);
  $location.path('/');
  });

  var checkPath = function() {
    if ($location.path() == 'http://localhost:3000/trips/' + $routeParams.trip_id + '/packings/' + $routeParams.id + '/edit') {
      $scope.editing = true;
      $http({
        method: 'GET',
        url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/packings/' + $routeParams.id + '.json'
      }).then(function(resp){
        console.log("got single packing data!", resp);
        $scope.newPacking = resp.data
      }, function(resp){
        console.log("error");
        console.log(resp);
      });
    } else {
      $scope.editing = false;
    }
  };
  checkPath();

  $scope.editPage = function(id) {
  $scope.packingId = id;
  }

  $scope.toggleName = function (name) {
    var nameIndex = $scope.nameList.indexOf(name);
    if (nameIndex == -1){
      $scope.nameList.push(name);
    } else {
      $scope.nameList.splice(nameIndex, 1)
    }
    console.log($scope.nameList);
  };

  var getPackings = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/packings.json'
    }).then(function(resp){
      console.log("showing packings!", resp);
      $scope.packings = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var getUsers = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/users.json'
    }).then(function(resp){
      console.log("showing users info", resp)
      $scope.users = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp)
    });
  };

  $scope.addPacking = function() {
    $scope.newPacking.name_list = $scope.nameList;

    $http({
      method:'POST',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/packings',
      data: {
        packing: $scope.newPacking
      }
    }).then(function(resp){
      console.log("added new packing", resp);
      // getPacking();
      $scope.newPacking = {};
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.deletePacking = function(id, index) {
    $http({
      method: 'DELETE',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/packings/' + id + '.json'
    }).then(function(resp){
      console.log("deleted packing", index)
      $scope.packings.splice(index, 1);
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  getUsers();
  getPackings();


}]);