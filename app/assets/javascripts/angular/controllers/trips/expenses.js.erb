app.controller('ExpensesCtrl', ['$scope', '$http', '$auth', '$location','$routeParams', function($scope, $http, $auth, $location, $routeParams){
  $scope.message = "Expenses";
  $scope.expenses = [];
  $scope.users = [];
  $scope.newExpense = {};
  $scope.nameList = [];
  $scope.tripId = $routeParams.id;

  var checkPath = function(expense) {
    if ($location.path() == '/trips/' + $routeParams.id + '/expenses/edit') {
      $scope.editing = true;

      $scope.newExpense = {
        // title: expense.title,
        // amount: expense.amount,
        // user_id: expense.user_id,
        // status: expense.status,
        // id: expense.id
      };
      console.log("working! editing is true")
    } else {
      $scope.editing = false;
      console.log("working! editing is false")
    }
  };
  checkPath();

  $scope.validate = function () {
    $auth.validateUser().then(function(resp){
      console.log(resp);
    }).catch(function(resp){
      console.log(resp);
    })
  }

  $scope.toggleName = function (name) {
    var nameIndex = $scope.nameList.indexOf(name);
    if (nameIndex == -1){
      $scope.nameList.push(name);
    } else {
      $scope.nameList.splice(nameIndex, 1)
    }
    console.log($scope.nameList);
  }

  var getExpenses = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.id + '/expenses.json'
    }).then(function(resp){
      console.log("showing expenses!", resp);
      $scope.expenses = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var getUsers = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.id + '/users.json'
    }).then(function(resp){
      console.log("showing users info", resp)
      $scope.users = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp)
    });
  };

  $scope.addExpense = function() {
    $scope.newExpense.name_list = $scope.nameList;

    $http({
      method:'POST',
      url: 'http://localhost:3000/trips/' + $routeParams.id + '/expenses',
      data: {
        expense: $scope.newExpense
      }
    }).then(function(resp){
      console.log("added new expense", resp);
      getExpenses();
      $scope.newExpense = {};
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.editExpense = function(id) {
    $http({
      method: 'PATCH',
      url: 'http://localhost:3000/trips/' + $routeParams.id + '/expenses' + id + '.json',
      data: {
        expense: $scope.newExpense
      }
    }).then(function(resp){
      console.log("edited expense", resp);
      $scope.newExpense = {};
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.deleteExpense = function(id, index) {
    $http({
      method: 'DELETE',
      url: 'http://localhost:3000/trips/' + $routeParams.id + '/expenses/' + id + '.json'
    }).then(function(resp){
      console.log("deleted expense", index)
      $scope.expenses.splice(index, 1);
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  getExpenses();
  getUsers();

}]);