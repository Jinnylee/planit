app.controller('AccommodationsCtrl', ['$scope', '$http', '$auth', '$location','$routeParams', function($scope, $http, $auth, $location, $routeParams){
  $scope.message = "Accommodations";

  $scope.accommodations = [];
  $scope.users = [];
  $scope.newAccommodation = {};
  $scope.nameList = [];
  $scope.tripId = $routeParams.trip_id;
  $scope.accommodationId = $routeParams.id;

  $('#datetimepicker1').datetimepicker();
  $('#datetimepicker2').datetimepicker();


  $auth.validateUser().then(function(resp){
    console.log(resp);
    $scope.user = resp;
    $scope.currentuser = resp.name;
  }).catch(function(resp){
    console.log(resp);
    $location.path('/');
  });

  var getUsers = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/users.json'
    }).then(function(resp){
      console.log("showing users info", resp)
      $scope.users = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp)
    });
  };

  var getAccommodations = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/accommodations.json'
    }).then(function(resp){
      console.log("showing accommodations!", resp);
      // $scope.accommodations = resp.data
      resp.data.forEach(function(obj){
        check_in = moment(obj.check_in).format('lll')
        check_out = moment(obj.check_out).format('lll')
        $scope.accommodations.push({
          trip_id: obj.trip_id,
          check_in: check_in,
          check_out: check_out,
          name: obj.name,
          description: obj.description,
          confirmation_number: obj.confirmation_number,
          price: obj.price,
          link: obj.link,
          accommodation_splits: obj.accommodation_splits,
          id: obj.id
        });
      })
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var extractNameList = function (accommodationSplits) {
    for (var i=0; i < accommodationSplits.length; i++) {
      var user_id = accommodationSplits[i].user_id;
      $scope.nameList.push(user_id);
    }
  };

  var getAccommodation = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/accommodations/' + $routeParams.id + '.json'
    }).then(function(resp){
      console.log("got single accommodation data!", resp);
      check_in = moment(resp.data.check_in).format("lll");
      check_out = moment(resp.data.check_out).format("lll");
      $scope.newAccommodation = {
        trip_id: resp.data.trip_id,
        check_in: check_in,
        check_out: check_out,
        name: resp.data.name,
        description: resp.data.description,
        confirmation_number: resp.data.confirmation_number,
        price: resp.data.price,
        link: resp.data.link,
        id: resp.data.id
      };
      console.log($scope.newAccommodation, "here")
      extractNameList(resp.data.accommodation_splits);
      // console.log(resp.data.accommodation_splits, "here");
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var checkPath = function() {
    if ($location.path() == '/trips/' + $routeParams.trip_id + '/accommodations/' + $routeParams.id + '/edit') {
      $scope.editing = true;
      console.log("path checked to edit true")
      getAccommodation();
    } else {
      $scope.editing = false;
      getAccommodations();
      console.log("path checked to edit false", $location.path())
    }
  };

  $scope.editPage = function(id) {
    $scope.accommodationId = id;
  }

  $scope.toggleName = function (name) {
    var nameIndex = $scope.nameList.indexOf(name);
    if (nameIndex == -1){
      $scope.nameList.push(name);
    } else {
      $scope.nameList.splice(nameIndex, 1)
    }
    console.log($scope.nameList);
  };

  $scope.isChecked = function (name) {
    return $scope.nameList.indexOf(name) != -1;
  }

  $scope.addAccommodation = function() {
    $scope.newAccommodation.name_list = $scope.nameList;
    console.log($('#check-in-date').val(),"here")
    $scope.newAccommodation.check_in = moment($('#check-in-date').val()).format();
    $scope.newAccommodation.check_out = moment($('#check-out-date').val()).format();
    $http({
      method:'POST',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/accommodations',
      data: {
        accommodation: $scope.newAccommodation
      }
    }).then(function(resp){
      console.log("added new accommodation", resp);
      $location.path('/trips/' + $routeParams.trip_id + '/accommodations');
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.editAccommodation = function(id, index) {
    $scope.newAccommodation.name_list = $scope.nameList;

    $http({
      method: 'PATCH',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/accommodations/' + $routeParams.id + '.json',
      data: {
        accommodation: $scope.newAccommodation
      }
    }).then(function(resp){
      console.log("edited accommodation", resp);
      $location.path('/trips/' + $routeParams.trip_id + '/accommodations');
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.deleteAccommodation = function(id, index) {
    $http({
      method: 'DELETE',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/accommodations/' + id + '.json'
    }).then(function(resp){
      console.log("deleted accommodation", index)
      $scope.accommodations.splice(index, 1);
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var init = function () {
    getUsers();
    checkPath();
  };

  init();

}]);