app.controller('FlightsCtrl', ['$scope', '$http', '$auth', '$location','$routeParams', function($scope, $http, $auth, $location, $routeParams){
  $scope.message = "Flights";

  $scope.flights = [];
  $scope.users = [];
  $scope.newFlight = {};
  $scope.nameList = [];
  $scope.tripId = $routeParams.trip_id;
  $scope.flightId = $routeParams.id;


  var getUsers = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/users.json'
    }).then(function(resp){
      console.log("showing users info", resp)
      $scope.users = resp.data
    }, function(resp){
      console.log("error");
      console.log(resp)
    });
  };

  var getFlights = function() {
    $http({
      method: 'GET',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/flights.json'
    }).then(function(resp){
      console.log("showing flights!", resp);
      resp.data.forEach(function(obj){
        departure_date = moment(obj.departure_date).format('MM/DD/YYYY')
        arrival_date = moment(obj.arrival_date).format('MM/DD/YYYY')
        $scope.flights.push({
          trip_id: obj.trip_id,
          departure_date: departure_date,
          arrival_date: arrival_date,
          departure_airport: obj.location,
          arrival_airport: obj.title,
          airline: obj.airline,
          flight_number: obj.flight_number,
          terminal: obj.terminal,
          id: obj.id
        });
        console.log($scope.flights);
      })
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var extractNameList = function(flightSplits) {
    for (var i=0; i < flightSplits.length; i++) {
      var user_id = flightSplits[i].user_id;
      $scope.nameList.push(user_id);
    }
  };

  var getFlight = function() {
    $http({
        method: 'GET',
        url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/flights/' + $routeParams.id + '.json'
      }).then(function(resp){
        console.log("got single flight data!", resp);
        $scope.newFlight = resp.data;
        extractNameList(resp.data.flight_splits);
      }, function(resp){
        console.log("error");
        console.log(resp);
    });
  }

  var checkPath = function() {
    if ($location.path() == '/trips/' + $routeParams.trip_id + '/flights/' + $routeParams.id + '/edit') {
      $scope.editing = true;
      console.log("path checked to edit true")
      getFlight();
    } else {
      $scope.editing = false;
      getFlights();
      console.log("path checked to edit false", $location.path())
    }
  };

  $scope.editPage = function(id) {
    $scope.flightId = id;
  }

  $scope.toggleName = function (name) {
    var nameIndex = $scope.nameList.indexOf(name);
    if (nameIndex == -1){
      $scope.nameList.push(name);
    } else {
      $scope.nameList.splice(nameIndex, 1)
    }
    console.log($scope.nameList);
  };

  $scope.isChecked = function(name) {
    return $scope.nameList.indexOf(name) != -1;
    console.log(nameList);
  }

  $scope.addFlight = function() {
    $scope.newFlight.name_list = $scope.nameList;

    $http({
      method:'POST',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/flights',
      data: {
        flight: $scope.newFlight
      }
    }).then(function(resp){
      console.log("added new flight", resp);
      $location.path('/trips/' + $routeParams.trip_id + '/flights');
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  $scope.editFlight = function(id, index) {
    $scope.newFlight.name_list = $scope.nameList;

    $http({
      method:'PATCH',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/flights/' + $routeParams.id + '.json',
      data: {
        flight: $scope.newFlight
      }
    }).then(function(resp) {
      console.log("edited flight", resp);
      $location.path('/trips/' + $routeParams.trip_id + '/flights');
    }, function(resp) {
      console.log("error");
      console.log(resp);
    });
  };

  $scope.deleteFlight = function(id, index) {
    $http({
      method: 'DELETE',
      url: 'http://localhost:3000/trips/' + $routeParams.trip_id + '/flights/' + id + '.json'
    }).then(function(resp){
      console.log("deleted flight", index)
      $scope.flights.splice(index, 1);
    }, function(resp){
      console.log("error");
      console.log(resp);
    });
  };

  var init = function() {
    getUsers();
    checkPath();
  };

  init();

}]);